                    <param name="firewall_id" style="template"
                        type="csapi:UUID">
                        <wadl:doc
                            xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN" title="Firewall UUID">
                            <para>
                                The UUID for the firewall.
                            </para>
                        </wadl:doc>
                    </param>
                    <method href="#showFirewall"/>
                    <method href="#updateFirewall"/>
