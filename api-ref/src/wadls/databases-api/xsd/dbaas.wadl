                    <xsdxt:code
                        href="samples/db-detach-replica-request.json"/>
                </wadl:doc>
                <param name="replica_of" style="plain" type="xsd:string"
                    required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            To detach a replica, set <code>replica_of</code> to null.
                        </para>
                    </wadl:doc>
                </param>
                <param name="slave_of" style="plain" type="xsd:string"
                    required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            To detach a replica, set <code>slave_of</code> to null.
                        </para>
                    </wadl:doc>
                </param>
            </representation>
        </request>
        <response status="202">
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="samples/db-detach-replica-response-json-http.txt"
                    />
                </wadl:doc>
            </representation>
        </response> &commonFaults; &getFaults; &postPutFaults;
