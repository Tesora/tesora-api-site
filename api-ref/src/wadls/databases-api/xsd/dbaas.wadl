    <method name="POST" id="publishLog">
        <wadl:doc xml:lang="EN" title="Publish a guest log"
            xmlns="http://docbook.org/ns/docbook">
            <para role="shortdesc">
                Copies the contents of a guest log file to a Swift container, thus making the contents available for retrieval.
            </para>
            <para>
                The publish operation also automatically enables the log. Enabling
                a log means telling the guest agent to start writing information
                to the log.
            </para>
            <para>
                Note that some datastores (such as PostgreSQL) require you to restart the instance
                after you run this operation. After the restart, you run the operation again.
            </para>
        </wadl:doc>
        <request>
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="samples/db-log-publish-request-json-http.txt"/>
                    <xsdxt:code
                        href="samples/db-log-publish-request.json"/>
                </wadl:doc>
                <param name="name" style="plain" type="xsd:string"
                    required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            Name of the guest log you want to publish.
                        </para>
                    </wadl:doc>
                </param>
                <param name="publish" style="plain" type="xsd:boolean"
                    required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            You must set <code>publish</code> to True to indicate that you want to publish the log.
                        </para>
                    </wadl:doc>
                </param>
                <param name="disable" style="plain" type="xsd:boolean"
                    required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            To disable logging for the log specified
                            by <code>name</code>, set <code>disable</code>
                            to True.
                        </para>
                        <para>
                            For USER logs, this disables logging on the guest.
                            For SYS logs, this has no effect because
                            SYS logs cannot be disabled.
                        </para>
                        <para>
                            To turn logging back on again, run the enable operation.
                        </para>
                    </wadl:doc>
                </param>
                <param name="discard" style="plain" type="xsd:int"
                    required="false">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook"
                        xml:lang="EN">
                        <para>
                            To discard the Swift container that currently has
                            the contents of the log specified
                            by <code>name</code>, set <code>discard</code>
                            to True.
                        </para>
                    </wadl:doc>
                </param>
            </representation>
        </request>
        <response status="200">
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook"
                    xml:lang="EN">
                    <xsdxt:code
                        href="samples/db-log-publish-response-json-http.txt"/>
                    <xsdxt:code
                        href="samples/db-log-publish-response.json"/>
                </wadl:doc>
            </representation>
        </response> &commonFaults; &getFaults; &postPutFaults;
    </method>
